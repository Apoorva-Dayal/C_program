/* We have to use %zu in case to find size of any data type..*/
#include<stdio.h>
#include<stdlib.h>
int main()
{
    int a;
    float b;
    double c;
    char d;
    printf("The size of int is:%zu\n",sizeof(a)); 
    printf("The size of float is:%zu\n",sizeof(b)); 
    printf("The size of double is:%zu\n",sizeof(c)); 
    printf("The size of character is:%zu\n",sizeof(d)); 
    return 0;
}
